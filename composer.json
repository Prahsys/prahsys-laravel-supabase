{
    "name": "prahsys/laravel-supabase",
    "version": "0.2.0",
    "description": "A Laravel 12+ package for seamless integration with Supabase, including UUID handling and database features",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Prahsys",
            "email": "info@prahsys.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "illuminate/database": "^12.0",
        "illuminate/support": "^12.0"
    },
    "require-dev": {
        "laravel/pint": "^1.0",
        "orchestra/testbench": "^10.0",
        "pestphp/pest": "^3.0",
        "pestphp/pest-plugin-laravel": "^3.0",
        "phpunit/phpunit": "^10.0|^11.0"
    },
    "autoload": {
        "psr-4": {
            "Prahsys\\Supabase\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Prahsys\\Supabase\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Prahsys\\Supabase\\SupabaseServiceProvider"
            ]
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "test-supabase": "php -d variables_order=EGPCS vendor/bin/pest --env=testing",
        "lint": "vendor/bin/pint",
        "lint:check": "vendor/bin/pint --test"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}